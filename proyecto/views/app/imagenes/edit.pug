extends ../../layout.pug
block contenido
	div(class="col-md-6 remove-float center-block big-top-space")
		h1 Subir nueva imagen
		form(action="/app/imagenes/"+imagen._id+'?_method=PUT' method="POST" enctype="multipart/form-data")
			input(type="hidden" value="PUT" name="_method")
			div(class="form-group")
				label(for="title") Titulo
				input(type="text" name="title" placeholder="Titulo de la imagen" id="title" class="form-control" value=imagen.title)
			div(class="row top-space")
				div(class="col-xs-12 col-sm-6")
					input(type="submit" value="Guardar Imagen" class="btn btn-info")